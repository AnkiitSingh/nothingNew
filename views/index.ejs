<%- include('header.ejs') %>

<div class="ui container-fluid">

    <div class="d-flex" id="wrapper">

        <!-- Sidebar -->
        <div class="bg-light border-right" id="sidebar-wrapper">
          <div class="sidebar-heading">Create </div>
          <div class="list-group list-group-flush">
            <a href="/api/categoryForm" class="list-group-item list-group-item-action bg-light">Add Category</a>
            <a href="/api/productForm" class="list-group-item list-group-item-action bg-light">Add Products</a>
          </div>
        </div>
        <!-- /#sidebar-wrapper -->
    
        <!-- Page Content -->
        <div id="page-content-wrapper">
    
          <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
            <button class="btn btn-primary" id="menu-toggle">Toggle Menu</button>
    
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
    
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
              </ul>
            </div>
          </nav>



    <div class="container-fluid">

        <div class="text-center" style="margin-bottom:6vh">
            <h1>GROCERY STORE WEB-APP</h1>
        </div>

        <br/><br/>

        <div class="row text-center">
            <% for(var i=0;i<categories.length;i++) { %>
                <div class="col-sm-4">
                    <div class="card" style="width: 18rem;">
                        <a href="/api/product-<%- categories[i]._id %>">
                            <img class="card-img-top" src="/api/category/photo/<%- categories[i]._id %>" style="height:25vh; width:20vw" alt="Card image cap">
                        </a>
                        <div class="card-body">
                            <h5 class="card-title"><%- categories[i].name %></h5>
                            <p class="card-text">Priority: <%- categories[i].priority %> </p>
                        </div>
            
                        <div class="card-body">
                            <a href="api/categoryEdit-<%- categories[i]._id %>" class="card-link">Edit</a>
                            <a href="#" data-toggle="modal" data-target="#exampleModal<%- i %>" class="card-link">Delete</a>
                        </div>
                    </div>
                </div>
                <%- include('deleteModal.ejs',{link: `/api/category/admin/delete/${categories[i]._id}`, Sno: i }) %>
                <br/>
            <% } %>
        </div>
    </div>


</div>


<script>
    $("#menu-toggle").click(function(e) {
      e.preventDefault();
      $("#wrapper").toggleClass("toggled");
    });
  </script>