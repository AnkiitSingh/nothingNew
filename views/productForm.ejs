<%- include('header.ejs') %>

<form action="<%- link %>" method="POST">
    <input type="text" id="name" name="name" value="<%- name %>" placeholder="name">
    <input type="text" id="description" name="description" value="<%- description %>" placeholder="description">
    <input type="number" id="price" name="price" value="<%- price %>" placeholder="price">
    <input type="file" id="photo" name="photo"value="<%- photo %>" accept="image/*">
    <input type="number" id="quantity" name="quantity" value="<%- quantity %>" placeholder="quantity">
    <input type="submit" placeholder="click to submit">
</form>