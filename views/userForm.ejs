<%- include('header.ejs') %>

<div class="ui container">
  <div class="text-center">
    <h2>Create User</h2>
  </div>

  <form class="ui form" action="/api/newUser" method="post"  enctype="application/json">
    <label  for="email">E-Mail</label>
    <input type="email" id="email" name="email" placeholder="Email" /><br /><br />
    <label  for="phoneNo">Phone No.</label>
    <input type="Number" id="phoneNo" name="phoneNo" placeholder="Phone-Number" /><br /><br />
    <label  for="address">Address</label>
    <input type="text" id="address" name="address" placeholder="Address" /><br /><br />
    <input class="ui button primary" type="submit" />
  </form>
</div>