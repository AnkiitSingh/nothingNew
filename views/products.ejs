<%- include('header.ejs') %>

<div class="ui container text-center">

    <div style="margin-bottom:4vh">
        <h1>Products</h1>
    </div>

    <div class="row">
        <% for(var i=0;i<products.length;i++) { %>
            <div class="col-sm-4"  style="padding-bottom:4vh">
                <h4><%- products[i].name %></h4>
                <a href="/api/productEdit-<%- products[i]._id %>">
                    <button type="button" class="btn-primary">Edit</button>
                </a>
                <a data-toggle="modal" data-target="#exampleModal<%- i %>">
                    <button type="button" class="btn-primary">Delete</button>
                </a>
                <%- include('deleteModal.ejs',{link: `/api/product/admin/delete/${products[i]._id}`, Sno: i }) %>
            </div>
        <% } %>
    </div>
</div>